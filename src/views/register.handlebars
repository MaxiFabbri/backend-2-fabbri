<body>
    {{!-- Hago un pequeño Navbar para navegar a otras páginas --}}
    <nav class="navbar">
        <div style="font-size: 25px">Logo</div>
        <h2>Bienvenido</h2>
        <ul class="nav nav-pills nav-fill">
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
        </ul>
    </nav>

    <div class="product-input">
        <h1>PLEASE REGISTER:</h1>
        <form id="registerForm">
            <div class="input-element">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="input-element">
                <label for="email">email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="input-element">
                <label for="password">password:</label>
                <input type="text" id="password" name="password" required>
            </div>
            <button id="register" type="button">Registrarse</button>
        </form>
    </div>
</body>
<script>
    function registerOnClick() {
        const data = {
            name: document.getElementById('name').value,
            email: document.getElementById('email').value,
            password: document.getElementById('password').value
        }
        try {
            let options = {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(data),
            };
            fetch(`/api/sessions/register`, options)
                .then((res) => res.json())
                .then((res) => {
                    console.log("Response: ", res)
                    document.getElementById('registerForm').reset();
                })
        } catch (error) {
            alert(error)
        }
    }

    const registerButton = document.getElementById("register")
    registerButton.onclick = () => registerOnClick()
</script>